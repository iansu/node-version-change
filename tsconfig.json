{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "typeRoots": ["src/types", "node_modules/@types"],
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}